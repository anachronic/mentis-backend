{
  "name": "mentis-backend",
  "version": "1.0.0",
  "description": "A backend server for a mentis blog webapp",
  "main": "index.js",
  "scripts": {
    "start": "nodemon server.js --exec 'npm run lint && node --inspect'",
    "lint": "eslint --ignore-path .gitignore .",
    "test": "mocha --exit"
  },
  "author": "Nicol√°s Salas V.",
  "license": "MIT",
  "devDependencies": {
    "chai": "^4.2.0",
    "eslint": "^5.10.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-node": "^8.0.0",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "mocha": "^5.2.0",
    "nodemon": "^1.18.9",
    "nyc": "^13.1.0"
  },
  "dependencies": {
    "body-parser": "^1.18.3",
    "cors": "^2.8.5",
    "express": "^4.16.4",
    "mongoose": "^5.4.0",
    "morgan": "^1.9.1"
  },
  "nyc": {
    "all": true,
    "include": [
      "controllers/*.js",
      "models/*.js",
      "middleware/*.js",
      "routes.js"
    ],
    "exclude": [
      "db.js",
      "config.js"
    ]
  }
}
